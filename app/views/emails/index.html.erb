<p id="notice"><%= notice %></p>

<h1>Emails</h1>

<table :active>
  <thead>
    <tr>
      <th id="f1">Object</th>
      <th id="f2">Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <body>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.object %></td>
        <td><%= email.body %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_email' %></td>
      </tr>
    <% end %>
  </body>
</table>

<br>

<%= link_to 'New Email', new_email_path %>
